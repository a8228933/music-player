<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Music Player</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .track-list { max-width: 600px; margin: auto; margin-top: 50px; }
    .track-item { display: flex; justify-content: space-between; margin-bottom: 10px; }
  </style>
</head>
<body>
  <div class="container track-list">
    <h2 class="text-center mb-4">üéµ My Tracks</h2>

    <% @tracks.each_with_index do |track, index| %>
      <div class="track-item border p-2 rounded">
        <span><%= track %></span>
        <button class="btn btn-sm btn-primary play-button" data-src="/tracks/<%= track %>">‚ñ∂Ô∏è Play</button>
      </div>
    <% end %>

    <audio id="audioPlayer" controls class="w-100 mt-4" style="display: none;"></audio>
  </div>

  <script>
    const buttons = document.querySelectorAll('.play-button');
    const player = document.getElementById('audioPlayer');

    buttons.forEach(button => {
      button.addEventListener('click', () => {
        const src = button.getAttribute('data-src');
        player.src = src;
        player.style.display = 'block';
        player.play();
      });
    });
  </script>
</body>
</html>
